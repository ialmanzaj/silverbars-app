<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.project.calisthenic.Workout"
    android:background="#2d2d2d">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="250dp">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/imageView"
            android:background="@mipmap/imagen2" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/star_off"
            android:layout_gravity="right|bottom"
            android:src="@android:drawable/btn_star_big_off" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="By Ivan Markioli"
            android:id="@+id/textView4"
            android:layout_gravity="left|bottom"
            android:textStyle="bold" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Upper Body"
            android:id="@+id/textView5"
            android:layout_gravity="center_horizontal|top"
            android:background="#c8000000"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:gravity="center" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:layout_gravity="right|top"
            android:src="@android:drawable/ic_menu_save"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/star_on"
            android:layout_gravity="right|bottom"
            android:src="@android:drawable/btn_star_big_on"
            android:visibility="gone" />
    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="#chest #ripped #barbrother"
            android:id="@+id/textView6"
            android:layout_gravity="center_horizontal"
            android:textColor="#cb0000"
            android:textSize="20dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Details"
                android:id="@+id/textView7"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:background="#c8888888"
                android:textStyle="bold"
                android:textColor="#ffffff" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/imageView4"
                android:layout_gravity="right|center_vertical"
                android:src="@android:drawable/arrow_down_float" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=" Total workout aprox = 45min"
            android:id="@+id/textView8"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select you playlist"
            android:id="@+id/playlist"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Exercise list"
            android:id="@+id/textView10"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="START WORKOUT"
            android:id="@+id/workout"
            android:layout_gravity="center_horizontal"
            android:textSize="25dp" />

    </LinearLayout>
</LinearLayout>
