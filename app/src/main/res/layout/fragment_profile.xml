<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment"
    android:background="#fff">

  <ImageView
      android:layout_marginTop="10dp"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:background="@color/white"
      android:id="@+id/profile_image"
      android:layout_gravity="center"
      android:contentDescription="profile_image" />

  <TextView
      android:layout_marginBottom="5dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="?android:attr/textAppearanceLarge"
      android:text="id nombre"
      android:id="@+id/Profile_name"
      android:layout_gravity="center"
      android:textColor="@color/colorPrimaryText" />

  <RelativeLayout
      android:visibility="gone"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:layout_gravity="center"
      android:paddingTop="7dp"
      android:paddingBottom="7dp"
      android:background="@drawable/custom_border"
      android:id="@+id/myTeam">

   <TextView
       android:layout_marginStart="10dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textAppearance="?android:attr/textAppearanceLarge"
       android:text="@string/team"
       android:id="@+id/textView32"
       android:textColor="@color/colorPrimaryText"
       android:layout_gravity="center"
       android:gravity="center"
       android:layout_alignTop="@+id/textView37"
       android:layout_alignParentStart="true"
       android:textSize="20dp"
       android:layout_centerVertical="true" />

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textAppearance="?android:attr/textAppearanceLarge"
       android:text="Team Name"
       android:id="@+id/textView37"
       android:layout_gravity="center"
       android:layout_centerVertical="true"
       android:layout_toStartOf="@+id/imageView2"
       android:textColor="@color/colorPrimaryText"
       android:textStyle="bold"
       android:textSize="20dp" />

   <ImageView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/imageView2"
       android:src="@drawable/ic_keyboard_arrow_right_black_36dp"
       android:layout_gravity="end"
       android:layout_alignParentTop="true"
       android:layout_alignParentEnd="true" />
  </RelativeLayout>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:gravity="center"
      android:paddingTop="7dp"
      android:paddingBottom="7dp"
      android:background="@drawable/custom_border"
      android:id="@+id/Progression">

   <TextView
       android:layout_marginStart="10dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textAppearance="?android:attr/textAppearanceLarge"
       android:text="@string/progression_"
       android:id="@+id/textView33"
       android:textColor="@color/colorPrimaryText"
       android:layout_gravity="center"
       android:gravity="center"
       android:textSize="20dp"
       android:layout_centerVertical="true" />

   <ImageView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/imageView3"
       android:src="@drawable/ic_keyboard_arrow_right_black_36dp"
       android:layout_gravity="right"
       android:layout_alignParentTop="true"
       android:layout_alignParentEnd="true" />
  </RelativeLayout>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:gravity="center"
      android:paddingTop="7dp"
      android:paddingBottom="7dp"
      android:background="@drawable/custom_border"
      android:id="@+id/skillsProgression">

   <TextView
       android:layout_marginStart="10dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textAppearance="?android:attr/textAppearanceLarge"
       android:text="@string/skill_progress"
       android:id="@+id/textView34"
       android:textColor="@color/colorPrimaryText"
       android:layout_gravity="center"
       android:gravity="center"
       android:textSize="20dp"
       android:layout_centerVertical="true" />

   <ImageView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/imageView4"
       android:src="@drawable/ic_keyboard_arrow_right_black_36dp"
       android:layout_gravity="right"
       android:layout_alignParentTop="true"
       android:layout_alignParentEnd="true" />
  </RelativeLayout>

  <RelativeLayout
      android:visibility="gone"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:gravity="center"
      android:paddingTop="7dp"
      android:paddingBottom="7dp"
      android:background="@drawable/custom_border"
      android:id="@+id/sharedWorkouts">

   <TextView
       android:layout_marginStart="10dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textAppearance="?android:attr/textAppearanceLarge"
       android:text="@string/workout_shared"
       android:id="@+id/textView35"
       android:textColor="@color/colorPrimaryText"
       android:layout_gravity="center"
       android:gravity="center"
       android:textSize="20dp"
       android:layout_centerVertical="true" />

   <ImageView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/imageView5"
       android:src="@drawable/ic_keyboard_arrow_right_black_36dp"
       android:layout_gravity="right"
       android:layout_alignParentTop="true"
       android:layout_alignParentEnd="true" />
  </RelativeLayout>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:gravity="center"
      android:paddingTop="7dp"
      android:paddingBottom="7dp"
      android:background="@drawable/custom_border"
      android:id="@+id/history">

   <TextView
       android:layout_marginStart="10dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textAppearance="?android:attr/textAppearanceLarge"
       android:text="@string/history_workouts_done"
       android:id="@+id/textView36"
       android:textColor="@color/colorPrimaryText"
       android:layout_gravity="center"
       android:gravity="center"
       android:textSize="20dp"
       android:layout_centerVertical="true" />
   <ImageView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/imageView6"
       android:src="@drawable/ic_keyboard_arrow_right_black_36dp"
       android:layout_alignParentTop="true"
       android:layout_alignParentEnd="true"/>
  </RelativeLayout>


</LinearLayout>