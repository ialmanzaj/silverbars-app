<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/container"
    tools:context="com.app.proj.silverbars.LoginActivity">


    <LinearLayout
        android:layout_above="@+id/center"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/logo"
            android:src="@drawable/silverbars_logo_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="28sp"
            android:textColor="@color/black"
            android:id="@+id/slogan"
            android:text="Be your own machine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>



    <TextView
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Inica sesion para empezar a entrenar y ver tu progresion"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:visibility="invisible"
        android:textAlignment="center"
        android:id="@+id/slogan_login"
        android:layout_above="@+id/center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="40dp" />


    <!--<com.facebook.login.widget.LoginButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/FacebookLoginButton" />-->

    <ProgressBar

        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"

        android:visibility="invisible"
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_below="@+id/center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <Button
            android:layout_centerHorizontal="true"
            android:background="@color/blue"
            android:text="Login with facebook"
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/FacebookLoginButton"/>


    </RelativeLayout>








</RelativeLayout>
