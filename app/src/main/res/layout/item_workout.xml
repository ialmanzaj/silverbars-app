<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/lib/com.like.LikeButton"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="wrap_content"
    android:minWidth="165dp"
    android:layout_height="200dp"

    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2dp"
    android:layout_margin="4dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:id="@+id/img" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Routine Name"

        android:id="@+id/text"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:layout_gravity="bottom|center_horizontal"
        android:paddingTop="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:background="@color/white"


       >

        <Button
            android:id="@+id/btn"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:background="@color/gray_active_icon"

            android:textColor="@color/white"

            android:text="START" />

        <com.like.LikeButton
            app:like_drawable="@drawable/like"
            app:unlike_drawable="@drawable/unlike"
            app:dots_primary_color="@color/colorPrimaryText"
            app:dots_secondary_color="@color/bookmark"
            android:id="@+id/like"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_gravity="right"
            android:layout_height="wrap_content" />

    </LinearLayout>

</android.support.v7.widget.CardView>