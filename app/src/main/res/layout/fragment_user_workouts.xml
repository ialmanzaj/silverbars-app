<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.app.app.silverbarsapp.fragments.UserWorkoutsFragment">

    <LinearLayout
        android:id="@+id/empty_state"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <TextView
                android:textColor="@color/black"
                android:textSize="22sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/blank_text_my_workouts"
                android:layout_gravity="center"
                android:gravity="center" />

            <Button
                android:layout_marginTop="10dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:background="@color/colorSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_create_workout"
                android:id="@+id/create"
                android:layout_gravity="center"
                android:gravity="center" />
    </LinearLayout>



    <org.lucasr.twowayview.widget.TwoWayView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/list_my_workouts"
            android:layout_width="match_parent"
            android:scrollbars="vertical"
            android:layout_height="match_parent"
            app:twowayview_layoutManager="GridLayoutManager"
            app:twowayview_numColumns="2"
            android:orientation="vertical" />


</LinearLayout>
