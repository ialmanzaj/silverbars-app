<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="115dp"
    xmlns:fresco="http://schemas.android.com/tools"
    android:layout_marginTop="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="0dp"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="1dp">

    <LinearLayout
        android:id="@+id/itemSelected"
        android:baselineAligned="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:id="@+id/imageLayout">

            <com.facebook.drawee.view.SimpleDraweeView
                fresco:actualImageScaleType="centerInside"
                android:id="@+id/imagen"
                android:contentDescription="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/exercise_name" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:id="@+id/workout_layout">

            <TextView
                android:textStyle="bold"
                android:textSize="18sp"
                android:maxLines="1"
                android:ellipsize="marquee"
                android:id="@+id/exercise_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/exercise_name"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_marginTop="5dp"
                android:gravity="center_vertical|center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:baselineAligned="false">

                <android.support.design.widget.TextInputLayout
                    android:theme="@style/TextLabel"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content">
                    <AutoCompleteTextView
                        android:gravity="center_horizontal"
                        android:id="@+id/repsOrSeconds"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="24sp"
                        android:imeOptions="actionDone"
                        android:textColor="@color/black"
                        android:maxLength="3"
                        android:textColorHint="@color/black"
                        android:inputType="number"
                        android:maxLines="1" />
                </android.support.design.widget.TextInputLayout>

                <Spinner
                    android:layout_marginTop="14dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="-8dp"
                    android:backgroundTint="@color/black"
                    android:id="@+id/spinner_rep"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_marginStart="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:textSize="22sp"
                        android:textColor="@color/gray_active_icon"
                        android:text="+"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                    <android.support.design.widget.TextInputLayout
                        android:theme="@style/TextLabelSecondary"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content">
                        <AutoCompleteTextView
                            android:id="@+id/weight"
                            android:gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="22sp"
                            android:imeOptions="actionDone"
                            android:textColor="@color/gray_active_icon"
                            android:maxLength="3"
                            android:text="0"
                            android:textColorHint="@color/black"
                            android:inputType="numberDecimal"
                            android:maxLines="1" />
                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:layout_marginTop="18dp"
                        android:gravity="center_vertical"
                        android:id="@+id/kg"
                        android:textSize="20sp"
                        android:textColor="@color/gray_active_icon"
                        android:text="Kg"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>