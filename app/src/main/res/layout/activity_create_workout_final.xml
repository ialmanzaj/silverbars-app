<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.app.proj.silverbars.CreateWorkoutFinalActivity">
    <android.support.design.widget.AppBarLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/appbarlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        app:elevation="2dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            app:elevation="2dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:background="@color/colorPrimary"
            android:layout_above="@+id/content_frame"
            android:layout_alignParentStart="true">

            <Button
                android:id="@+id/Save"
                android:text="Save"
                android:background="@color/secondColor"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:layout_marginEnd="5dp"/>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/createLayout"
        android:background="#fff">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout3">



                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:id="@+id/imgProfile"
                        />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/chageImg"
                        android:src="@android:drawable/ic_menu_edit"
                        android:layout_gravity="right|bottom"
                        android:background="#00ffffff" />

                </FrameLayout>

                <LinearLayout

                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Workout name"
                        android:id="@+id/textView"
                        android:layout_gravity="left|center_horizontal"
                        android:textColor="@color/colorPrimaryText" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:hint="Workout name"
                        android:ems="10"
                        android:maxLength="20"
                        android:id="@+id/workoutName"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/colorPrimaryDark" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"


                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/number_sets_text"
                        android:textColor="@color/black"
                        android:textSize="18sp"

                        />
                    <LinearLayout
                        android:minHeight="45dp"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">



                        <TextView

                            android:layout_marginEnd="10dp"

                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="22sp"
                            android:text="@string/number_sets"
                            android:minWidth="45dp"

                            android:textColor="@color/black"
                            android:gravity="center_vertical|center_horizontal"
                            android:id="@+id/Sets"
                            android:textAlignment="center"
                            />




                    </LinearLayout>

                </RelativeLayout>
                <RelativeLayout
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"


                    android:gravity="center_vertical"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rest_exercise_text"
                        android:textColor="@color/black"
                        android:textSize="18sp"


                        />
                    <LinearLayout
                        android:minHeight="45dp"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">



                        <TextView

                            android:layout_marginEnd="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"

                            android:textSize="22sp"
                            android:text="@string/rest_exercise"
                            android:minWidth="45dp"

                            android:textColor="@color/black"
                            android:gravity="center_vertical|center_horizontal"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textAlignment="center"
                            android:hint="@string/zero"
                            android:id="@+id/RestbyExercise" />



                    </LinearLayout>

                </RelativeLayout>
                <RelativeLayout
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"


                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rest_sets_text"
                        android:textColor="@color/black"
                        android:textSize="18sp" />


                    <LinearLayout
                        android:minHeight="45dp"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView

                            android:layout_marginEnd="10dp"
                            android:textSize="22sp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"

                            android:minWidth="45dp"
                            android:text="@string/rest_sets"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/black"
                            android:gravity="center_vertical|center_horizontal"

                            android:textAlignment="center"
                            android:id="@+id/RestbySet" />



                    </LinearLayout>

                </RelativeLayout>

                <TextView
                    android:paddingStart="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Exercises:"
                    android:textColor="@color/colorPrimaryText" />


                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/final_recycler" />



            </LinearLayout>



        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
