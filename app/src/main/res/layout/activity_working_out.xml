<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WorkingOutActivity"

    android:background="#fff">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:minHeight="150dp">

                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/reciclador"
                    android:orientation="horizontal" />

            </RelativeLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginBottom="5dp"
                android:id="@+id/linearLayout">


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="15dp"
                    android:gravity="top">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"

                        android:gravity="center">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone"
                            android:id="@+id/prvLayout">

                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/prvExercise"
                                android:src="@mipmap/ic_keyboard_arrow_left_black_36dp"
                                android:background="#fff"
                                android:layout_gravity="center" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Last Exercise"
                                android:id="@+id/textView12"
                                android:textSize="12sp"
                                android:layout_gravity="center_horizontal|bottom"
                                android:layout_marginTop="5sp" />
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"

                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:text="@string/zero"
                                android:id="@+id/timer"
                                android:textColor="@color/black"
                                android:textSize="90sp"
                                android:layout_gravity="center_horizontal"

                                android:textStyle="bold"
                                android:gravity="bottom" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-18dp"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="@string/reps_text"
                                android:id="@+id/textView16"
                                android:textSize="20sp"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@color/black" />


                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"

                        android:gravity="end|right"
                        android:layout_gravity="right">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/nxtLayout"
                            android:layout_gravity="end"
                            android:visibility="gone">

                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/nxtExercise"
                                android:src="@drawable/ic_skip_next_black_24dp"
                                android:layout_gravity="center"
                                android:background="@color/white"
                                android:contentDescription="@null" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Next Exercise"
                                android:id="@+id/textView11"
                                android:textSize="12sp"
                                android:layout_marginTop="5sp"
                                android:layout_gravity="center_horizontal|bottom" />
                        </FrameLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="90dp">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"

                       android:gravity="top">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/exercise_text"
                            android:id="@+id/textView21"
                            android:textColor="@color/colorAccent"
                            android:textSize="18sp"
                            android:layout_marginTop="-5dp"
                           android:layout_below="@+id/exercises_number"
                            android:layout_centerHorizontal="true"


                            />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/exercises_number"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:text="@string/zero"
                                android:id="@+id/CurrentExercise"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:textSize="32sp"
                                android:layout_gravity="center_horizontal|top"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:text="/"
                                android:id="@+id/textView20"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:textSize="32sp"
                                android:layout_gravity="center_horizontal|top"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:text="@string/zero"
                                android:id="@+id/TotalExercise"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:textSize="32sp"
                                android:layout_gravity="center_horizontal|top"


                                />
                        </LinearLayout>


                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="top">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-5dp"
                            android:text="@string/set_text"
                            android:id="@+id/textView19"
                            android:textSize="18sp"

                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/set_numbers"
                            android:textColor="@color/colorAccent" />

                        <LinearLayout
                            android:id="@+id/set_numbers"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="@string/zero"
                                android:id="@+id/CurrentSet"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:textSize="32sp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="/"
                                android:id="@+id/textView18"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:textSize="32sp"


                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="@string/zero"
                                android:id="@+id/TotalSet"
                                android:textSize="32sp"
                                android:textColor="@color/black"
                                />
                        </LinearLayout>


                    </RelativeLayout>

                    <!---    Layout SETS -->

                </LinearLayout>




            </LinearLayout>

            <LinearLayout
                android:layout_gravity="bottom"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginBottom="2dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="42dp"
                    android:gravity="center">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/pause_button"
                        android:id="@+id/PauseButton"
                        android:textColor="@color/white"
                        android:background="@color/gray_active_icon" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/end_button"
                        android:id="@+id/Endbutton"
                        android:background="@color/secondColor"
                        android:textColor="#ffffff"
                        android:layout_marginStart="2dp" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="#c8000000"
                    android:id="@+id/bottom">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:background="#000"
                        android:id="@+id/PlayerLayout">


                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"


                            android:layout_marginStart="25dp"
                            android:layout_alignParentTop="true"

                            android:id="@+id/container_text_song"
                            android:layout_gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:id="@+id/song_name"
                                android:textColor="#ffff"
                                android:text="@string/song_name"
                                android:textStyle="bold"
                                android:singleLine="true"
                                android:ellipsize="marquee"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:scrollHorizontally="true"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="@string/artist_name"

                                android:id="@+id/artist_name"

                                android:textColor="#fff"
                                android:textSize="15sp"


                                android:layout_below="@+id/song_name"
                                android:layout_alignParentStart="true" />


                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="15dp"

                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true">


                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/btnPlay"
                                android:minHeight="30dp"
                                android:src="@android:drawable/ic_media_play"
                                android:background="#00ffffff"

                                android:layout_centerVertical="true"
                                android:contentDescription="@string/resume_workout_text" />

                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:minHeight="30dp"
                                android:id="@+id/btnPause"
                                android:src="@android:drawable/ic_media_pause"
                                android:background="#00ffffff"

                                android:layout_centerVertical="true"

                                android:visibility="gone"
                                android:contentDescription="@string/pause_button" />
                        </RelativeLayout>

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <FrameLayout
            android:gravity="center_vertical"
            android:layout_marginBottom="110dp"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#c81f1f1f"
            android:id="@+id/ModalLayout">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/get_ready_text"
                android:id="@+id/headerText"
                android:layout_gravity="top|center"
                android:layout_marginTop="50dp"
                android:textSize="50sp"
                android:textColor="#fff"
                />

            <TextView
                android:id="@+id/startCounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/number_five"

                android:layout_gravity="center_horizontal|center_vertical"
                android:textColor="#fff"
                android:textSize="180sp" />

        </FrameLayout>



    </FrameLayout>

</LinearLayout>