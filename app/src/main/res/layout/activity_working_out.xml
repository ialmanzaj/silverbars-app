<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.WorkingOutActivity"
    android:background="#fff">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:minHeight="150dp">

                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/list"
                    android:orientation="horizontal" />

            </RelativeLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/zero"
                                android:id="@+id/repetition_timer"
                                android:textColor="@color/black"
                                android:textSize="95sp"
                                android:textStyle="bold"
                                android:gravity="bottom" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-18dp"
                                android:text="@string/reps_text"
                                android:textSize="20sp"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@color/dark_gray" />




                </LinearLayout>
                <LinearLayout
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="22sp"
                        android:textColor="@color/black"
                        android:text="Tempo: "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/positive"
                        android:textSize="22sp"
                        android:textColor="@color/black"
                        android:text="2"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textSize="22sp"
                        android:textColor="@color/black"
                        android:text="s"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textSize="22sp"
                        android:textColor="@color/black"
                        android:text=" - "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/isometric"
                        android:textSize="22sp"
                        android:textColor="@color/black"
                        android:text="2"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textSize="22sp"
                        android:textColor="@color/black"
                        android:text="s"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textSize="22sp"
                        android:textColor="@color/black"
                        android:text=" - "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/negative"
                        android:textSize="22sp"
                        android:textColor="@color/black"
                        android:text="2"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textSize="22sp"
                        android:textColor="@color/black"
                        android:text="s"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_gravity="bottom"
                    android:minHeight="90dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/exercise_text"
                            android:id="@+id/textView21"
                            android:textColor="@color/secondColor"
                            android:textSize="16sp"
                            android:layout_marginTop="-5dp"
                            android:layout_below="@+id/exercises_number"
                            android:layout_centerHorizontal="true" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/exercises_number"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/zero"
                                android:id="@+id/current_exercise"
                                android:gravity="center"
                                android:textColor="@color/secondColor"
                                android:textSize="32sp"
                                android:layout_gravity="center_horizontal|top" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="/"
                                android:id="@+id/textView20"
                                android:gravity="center"
                                android:textColor="@color/secondColor"
                                android:textSize="32sp"
                                android:layout_gravity="center_horizontal|top" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/zero"
                                android:id="@+id/total_exercises"
                                android:gravity="center"
                                android:textColor="@color/secondColor"
                                android:textSize="32sp"
                                android:layout_gravity="center_horizontal|top" />
                        </LinearLayout>


                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">


                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-5dp"
                            android:text="@string/set_text"
                            android:textSize="16sp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/set_numbers"
                            android:textColor="@color/colorSecondary" />

                        <LinearLayout
                            android:id="@+id/set_numbers"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="@string/zero"
                                android:id="@+id/current_set"
                                android:gravity="center"
                                android:textColor="@color/colorSecondary"
                                android:textSize="32sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="/"
                                android:id="@+id/textView18"
                                android:gravity="center"
                                android:textColor="@color/colorSecondary"
                                android:textSize="32sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="@string/zero"
                                android:id="@+id/TotalSet"
                                android:textSize="32sp"
                                android:textColor="@color/colorSecondary" />
                        </LinearLayout>


                    </RelativeLayout>

                    <!---    Layout SETS -->

                </LinearLayout>

                <LinearLayout

                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center">

                            <ImageButton
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/prvExercise"
                                android:src="@drawable/ic_fast_rewind_black_24px"
                                android:background="#fff"
                                android:layout_gravity="center"
                                android:contentDescription="@null" />

                    </LinearLayout>
                    <RelativeLayout
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">

                        <ImageButton
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"

                            android:id="@+id/finish_workout"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_stop_black_36px"
                            android:background="#fff"
                            android:contentDescription="@null" />

                        <ImageButton
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"

                            android:id="@+id/play_workout"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_play_circle_filled_black_36px"
                            android:background="#fff"
                            android:contentDescription="@null" />

                        <ImageButton
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"

                            android:id="@+id/pause_workout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_pause_circle_filled_black_36px"
                            android:background="#fff"
                            android:contentDescription="@null" />


                    </RelativeLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:id="@+id/nxtLayout"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">

                            <ImageButton
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/nxtExercise"
                                android:src="@drawable/ic_fast_forward_black_24px"
                                android:layout_gravity="center"
                                android:background="@color/white"
                                android:contentDescription="@null" />


                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:visibility="gone"
                    android:layout_marginBottom="2dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="42dp"
                    android:gravity="center">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/pause_button"

                        android:textColor="@color/white"
                        android:background="@color/gray_active_icon" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/end_button"
                        android:background="@color/secondColor"
                        android:textColor="#ffffff"
                        android:layout_marginStart="2dp" />

                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="@color/black"
                    android:id="@+id/PlayerLayout">

                        <RelativeLayout
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginStart="15dp"
                            android:id="@+id/container_text_song">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:id="@+id/song_name"
                                android:textColor="#ffff"
                                android:text="@string/song_name"
                                android:textStyle="bold"
                                android:singleLine="true"
                                android:ellipsize="end" />

                            <TextView
                                android:singleLine="true"
                                android:ellipsize="end"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/artist_name"
                                android:id="@+id/artist_name"
                                android:textColor="@color/dark_gray"
                                android:textSize="15sp"
                                android:layout_below="@+id/song_name" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="10dp">

                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/play_music"
                                android:src="@drawable/ic_play_circle_outline_white_36px"
                                android:background="#00ffffff"
                                android:contentDescription="@string/resume_workout_text" />

                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:id="@+id/pause_music"
                                android:src="@drawable/ic_pause_circle_outline_white_36px"
                                android:background="#00ffffff"
                                android:visibility="gone"
                                android:contentDescription="@string/pause_button" />
                        </RelativeLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_vertical|center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#c81f1f1f"
            android:id="@+id/modal_overlay">

            <TextView
                android:layout_marginTop="-60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/get_ready_text"
                android:id="@+id/headerText"
                android:layout_gravity="top|center"
                android:textSize="50sp"
                android:textColor="#fff" />

            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/RestCounter_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/number_five"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="140sp" />

            <TextView
                android:layout_marginTop="-30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sec"
                android:textColor="#fff"
                android:textSize="35sp" />

        </LinearLayout>
    </FrameLayout>
</LinearLayout>