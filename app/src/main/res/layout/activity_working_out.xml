<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.WorkingOutActivity"
    android:background="#fff">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:minHeight="150dp">

                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/list"
                    android:orientation="horizontal" />

            </RelativeLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/exercise_text"
                            android:textColor="@color/secondColor"
                            android:textSize="16sp"
                            android:layout_marginTop="-5dp"
                            android:layout_below="@+id/exercises_number"
                            android:layout_centerHorizontal="true" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/exercises_number"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/zero"
                                android:id="@+id/current_exercise"
                                android:gravity="center"
                                android:textColor="@color/secondColor"
                                android:textSize="32sp"
                                android:layout_gravity="center_horizontal|top" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="/"
                                android:id="@+id/textView20"
                                android:gravity="center"
                                android:textColor="@color/secondColor"
                                android:textSize="32sp"
                                android:layout_gravity="center_horizontal|top" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/zero"
                                android:id="@+id/total_exercises"
                                android:gravity="center"
                                android:textColor="@color/secondColor"
                                android:textSize="32sp"
                                android:layout_gravity="center_horizontal|top" />
                        </LinearLayout>
                    </RelativeLayout>
                    <LinearLayout
                        android:gravity="center_horizontal|center_vertical"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/zero"
                            android:id="@+id/repetition_timer"
                            android:textColor="@color/black"
                            android:textSize="95sp"
                            android:textStyle="bold"
                            android:gravity="bottom" />

                        <TextView
                            android:id="@+id/option"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-18dp"
                            android:text="@string/reps_text"
                            android:textSize="20sp"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/dark_gray" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-5dp"
                            android:text="@string/set_text"
                            android:textSize="16sp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/set_numbers"
                            android:textColor="@color/colorSecondary" />

                        <LinearLayout
                            android:id="@+id/set_numbers"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="@string/zero"
                                android:id="@+id/current_set"
                                android:gravity="center"
                                android:textColor="@color/colorSecondary"
                                android:textSize="32sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="/"
                                android:gravity="center"
                                android:textColor="@color/colorSecondary"
                                android:textSize="32sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="@string/zero"
                                android:id="@+id/sets_total"
                                android:textSize="32sp"
                                android:textColor="@color/colorSecondary" />

                        </LinearLayout>


                    </RelativeLayout>



                </LinearLayout>

                <LinearLayout
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_gravity="bottom"
                    android:minHeight="90dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false">

                    <com.app.app.silverbarsapp.Chronometer
                        android:id="@+id/chronometer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="0sp"
                        android:textColor="@color/black"
                        android:gravity="center" />

                    <com.app.app.silverbarsapp.PausableChronometer
                        android:id="@+id/chronometer2"
                        android:textColor="@color/black"
                        android:textSize="60sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:baselineAligned="false">

                    <RelativeLayout
                        android:visibility="invisible"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_centerInParent="true"
                            android:src="@drawable/circle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:contentDescription="@null" />

                        <ImageView
                            android:layout_centerInParent="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/prev_exercise"
                            android:src="@drawable/ic_fast_rewind_black_24px"
                            android:layout_gravity="center"
                            android:contentDescription="@null" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:visibility="invisible"
                            android:id="@+id/pause_workout"
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:tint="@color/secondColor"
                                android:src="@drawable/circle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:contentDescription="@null" />

                            <ImageView
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_stop_black_36px"
                                android:contentDescription="@null" />

                        </RelativeLayout>


                        <ImageView
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/play_workout"
                            android:src="@drawable/ic_play_circle_filled_black_36px"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:contentDescription="@null" />


                    </RelativeLayout>

                    <RelativeLayout

                        android:id="@+id/nxtLayout"

                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_centerInParent="true"
                            android:src="@drawable/circle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:contentDescription="@null" />

                            <ImageView
                                android:layout_centerHorizontal="true"
                                android:layout_centerInParent="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/next_exercise"
                                android:src="@drawable/ic_fast_forward_black_24px"
                                android:contentDescription="@null" />


                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="@color/black"
                    android:id="@+id/player_layout"
                    android:baselineAligned="false">

                        <RelativeLayout
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginStart="15dp"
                            android:id="@+id/container_text_song">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:id="@+id/song_name"
                                android:textColor="#ffff"
                                android:text="@string/song_name"
                                android:textStyle="bold"
                                android:maxLines="1"
                                android:ellipsize="end" />

                            <TextView
                               android:maxLines="1"
                                android:ellipsize="end"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/artist_name"
                                android:id="@+id/artist_name"
                                android:textColor="@color/dark_gray"
                                android:textSize="15sp"
                                android:layout_below="@+id/song_name" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="10dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:id="@+id/play_music"
                                android:src="@drawable/ic_play_circle_outline_white_36px"
                                android:contentDescription="@string/resume_workout_text" />

                            <ImageView
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:id="@+id/pause_music"
                                android:src="@drawable/ic_pause_circle_outline_white_36px"
                                android:contentDescription="@string/pause_button" />

                        </RelativeLayout>

                </LinearLayout>



        </LinearLayout>



    <LinearLayout
        android:visibility="invisible"
            android:orientation="vertical"
            android:gravity="center_vertical|center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#c81f1f1f"
            android:id="@+id/modal_overlay">

            <TextView
                android:layout_marginTop="-60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/get_ready_text"
                android:id="@+id/headerText"
                android:layout_gravity="top|center"
                android:textSize="50sp"
                android:textColor="#fff" />

            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/rest_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/number_five"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="140sp" />

            <TextView
                android:layout_marginTop="-30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sec"
                android:textColor="#fff"
                android:textSize="35sp" />


        </LinearLayout>

</FrameLayout>