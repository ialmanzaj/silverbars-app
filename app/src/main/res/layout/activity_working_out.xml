<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WorkingOutActivity"
    android:weightSum="1"
    android:background="#fff"
    android:animateLayoutChanges="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp">

                <android.support.v7.widget.RecyclerView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/reciclador"
                    android:orientation="horizontal" />

            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2"

                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:id="@+id/linearLayout">


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="90dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"

                        android:gravity="center">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone"
                            android:id="@+id/prvLayout">

                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/prvExercise"
                                android:src="@mipmap/ic_keyboard_arrow_left_black_36dp"
                                android:background="#fff"
                                android:layout_gravity="center" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Last Exercise"
                                android:id="@+id/textView12"
                                android:textSize="12sp"
                                android:layout_gravity="center_horizontal|bottom"
                                android:layout_marginTop="5sp" />
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"

                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:text="0"
                                android:id="@+id/timer"
                                android:textColor="@color/black"
                                android:textSize="85sp"
                                android:layout_gravity="center_horizontal"

                                android:textStyle="bold"
                                android:gravity="bottom" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Reps"
                                android:id="@+id/textView16"
                                android:textSize="20sp"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@color/black" />


                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"

                        android:gravity="end|right"
                        android:layout_gravity="right">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/nxtLayout"
                            android:layout_gravity="right"
                            android:visibility="gone">

                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/nxtExercise"
                                android:src="@mipmap/ic_keyboard_arrow_right_black_36dp"
                                android:background="#fff"
                                android:layout_gravity="center"
                                android:contentDescription="" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Next Exercise"
                                android:id="@+id/textView11"
                                android:textSize="12sp"
                                android:layout_marginTop="5sp"
                                android:layout_gravity="center_horizontal|bottom" />
                        </FrameLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="90dp"
                    android:baselineAligned="false"
                    >

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"

                        android:layout_gravity="center_horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="SET"
                            android:id="@+id/textView19"
                            android:textSize="20sp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"

                            android:textColor="@color/colorAccent" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="0"
                                android:id="@+id/CurrentSet"
                                android:gravity="center"
                                android:textColor="@color/colorAccent"
                                android:textSize="28sp"



                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="/"
                                android:id="@+id/textView18"
                                android:gravity="center"
                                android:textColor="@color/colorAccent"
                                android:textSize="28sp"


                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="0"
                                android:id="@+id/TotalSet"
                                android:textSize="28sp"
                                android:textColor="@color/colorAccent"
                                />
                        </LinearLayout>

                    </RelativeLayout>

                    <!---    Layout SETS -->

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"

                        android:layout_gravity="center_horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="EXERCISE"
                            android:id="@+id/textView21"
                            android:textColor="@color/colorAccent"


                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"


                            />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="0"
                                android:id="@+id/CurrentExercise"
                                android:gravity="center"
                                android:textColor="@color/colorAccent"
                                android:textSize="25sp"
                                android:layout_gravity="center_horizontal|top"
                                 />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="/"
                                android:id="@+id/textView20"
                                android:gravity="center"
                                android:textColor="@color/colorAccent"
                                android:textSize="25dp"
                                android:layout_gravity="center_horizontal|top"
                                 />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="0"
                                android:id="@+id/TotalExercise"
                                android:gravity="center"
                                android:textColor="@color/colorAccent"
                                android:textSize="25sp"
                                android:layout_gravity="center_horizontal|top"


                                />
                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="42dp"
                    android:gravity="center"
                    >

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="PAUSE WORKOUT"
                        android:id="@+id/PauseButton"
                         android:textColor="@color/white"
                        android:background="@color/gray_active_icon" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="END WORKOUT"
                        android:id="@+id/button11"
                        android:background="@color/secondColor"
                        android:textColor="#ffffff"

                        android:layout_marginLeft="4dp" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#c8000000"

                android:id="@+id/bottom">



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:background="#000"
                    android:id="@+id/PlayerLayout">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"


                        android:layout_marginStart="25dp"
                        android:layout_alignParentTop="true"

                        android:id="@+id/container_text_song"
                        android:layout_gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:id="@+id/song_name"
                            android:textColor="#ffff"
                            android:text="Song Name Label"
                            android:textStyle="bold"
                            android:singleLine="true"
                            android:ellipsize="marquee"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:scrollHorizontally="true"
                           />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Artist Label"

                            android:id="@+id/artist_name"

                            android:textColor="#fff"
                            android:textSize="15sp"


                            android:layout_below="@+id/song_name"
                            android:layout_alignParentStart="true" />


                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="15dp"

                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true">


                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/btnPlay"
                            android:minHeight="30dp"
                            android:src="@android:drawable/ic_media_play"
                            android:background="#00ffffff"

                            android:layout_centerVertical="true"
                            />

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:minHeight="30dp"
                            android:id="@+id/btnPause"
                            android:src="@android:drawable/ic_media_pause"
                            android:background="#00ffffff"

                            android:layout_centerVertical="true"

                            android:visibility="gone" />
                    </RelativeLayout>

                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>

        <FrameLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#c81f1f1f"
            android:id="@+id/ModalLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="3"
                android:id="@+id/startCounter"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:textSize="200sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Get Ready!"
                android:id="@+id/headerText"
                android:layout_gravity="top|center"
                android:layout_marginTop="50dp"
                android:textSize="70sp"
                android:textColor="#ffffff"
                />
        </FrameLayout>

    </FrameLayout>

</LinearLayout>